name        = Juraport theme
core        = 7.x
base theme  = zen
screenshot  = juraport_screenshot.png
version     = 7.x-0.2.0

; Remove the system's menu and message styling since Zen has its own.
stylesheets[all][] = system.menus.css
stylesheets[all][] = system.messages.css
stylesheets[all][] = system.theme.css

; Add our own stylesheet.
stylesheets[all][] = css/styles.css

; Add our own script (TODO).
;scripts[] = js/script.js

regions[header]         = Header
regions[help]           = Help
regions[content]        = Content
regions[sidebar_first]  = First sidebar
regions[sidebar_second] = Second sidebar
regions[footer]         = Footer

; page_top and page_bottom hidden regions are hidden
regions[page_top]       = Page top
regions[page_bottom]    = Page bottom

; Toggable page element features on admin/appearance config page
features[] = logo
features[] = name
features[] = favicon

